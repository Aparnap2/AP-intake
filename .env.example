# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ap_intake
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Message Queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_TYPE=local  # local, s3, r2, supabase
STORAGE_PATH=./storage

# Enhanced Local Storage Configuration
STORAGE_COMPRESSION_ENABLED=true
STORAGE_COMPRESSION_TYPE=gzip    # gzip, lz4, none
STORAGE_COMPRESSION_THRESHOLD=1024  # bytes

# AWS S3 Configuration (for S3 storage type)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ap-intake-documents

# Docling Configuration
DOCLING_CONFIDENCE_THRESHOLD=0.85
DOCLING_MAX_PAGES=50
DOCLING_TIMEOUT=30

# LangGraph Configuration
LANGGRAPH_PERSIST_PATH=./langgraph_storage
LANGGRAPH_STATE_TTL=3600

# LLM Configuration (for low-confidence patching)
OPENAI_API_KEY=sk-your-openai-key
OPENROUTER_API_KEY=sk-or-your-openrouter-key
LLM_PROVIDER=openai  # openai, openrouter
LLM_MODEL=gpt-3.5-turbo
OPENROUTER_MODEL=anthropic/claude-3-haiku
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.1

# Authentication & Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for ingestion)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GRAPH_TENANT_ID=your-azure-tenant-id
GRAPH_CLIENT_ID=your-graph-client-id
GRAPH_CLIENT_SECRET=your-graph-client-secret

# Export Configuration
EXPORT_PATH=./exports
QUICKBOOKS_SANDBOX_CLIENT_ID=your-qb-client-id
QUICKBOOKS_SANDBOX_CLIENT_SECRET=your-qb-client-secret
XERO_SANDBOX_CLIENT_ID=your-xero-client-id
XERO_SANDBOX_CLIENT_SECRET=your-xero-client-secret

# Observability
SENTRY_DSN=https://your-sentry-dsn
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_HOST=https://cloud.langfuse.com

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=25
ALLOWED_FILE_TYPES=pdf,image/jpeg,image/png

# Background Worker Configuration
WORKER_CONCURRENCY=4
WORKER_PREFETCH_MULTIPLIER=1
WORKER_TASK_SOFT_TIME_LIMIT=300
WORKER_TASK_TIME_LIMIT=600

# UI Configuration
UI_HOST=http://localhost:3000
API_HOST=http://localhost:8000
