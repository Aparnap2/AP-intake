# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ap_intake
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Message Queue
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage

# Enhanced Local Storage Configuration
STORAGE_COMPRESSION_ENABLED=false
STORAGE_COMPRESSION_TYPE=none
STORAGE_COMPRESSION_THRESHOLD=1024

# Docling Configuration
DOCLING_CONFIDENCE_THRESHOLD=0.85
DOCLING_MAX_PAGES=50
DOCLING_TIMEOUT=30

# LangGraph Configuration
LANGGRAPH_PERSIST_PATH=./langgraph_storage
LANGGRAPH_STATE_TTL=3600

# LLM Configuration (for low-confidence patching)
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.1
MAX_LLM_COST_PER_INVOICE=0.10

# Authentication & Security
SECRET_KEY=test-secret-key-for-local-development-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Export Configuration
EXPORT_PATH=./exports

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=25
ALLOWED_FILE_TYPES=pdf,image/jpeg,image/png

# Background Worker Configuration
WORKER_CONCURRENCY=2
WORKER_PREFETCH_MULTIPLIER=1
WORKER_TASK_SOFT_TIME_LIMIT=300
WORKER_TASK_TIME_LIMIT=600

# UI Configuration
UI_HOST=http://localhost:3000
API_HOST=http://localhost:8000

# Environment
ENVIRONMENT=development